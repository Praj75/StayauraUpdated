<%- layout("/layouts/boilerplate") %>

<div class="container">
    <h1 class="page-heading">Create New Listing</h1>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input name="listing[title]" placeholder="Enter your listing title" type="text" class="form-control" required>
                            <div class="valid-feedback">Great title!</div>
                            <div class="invalid-feedback">Title is required!</div>
                        </div>

                        <div class="mb-3"> 
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" class="form-control" rows="4" placeholder="Describe your place" required></textarea>
                            <div class="invalid-feedback">Please provide a description</div>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Upload Images</label>
                            <input name="listing[image]" type="file" class="form-control" multiple>
                            <div class="form-text">You can upload multiple images</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="price" class="form-label">Price (per night)</label>
                                <div class="input-group">
                                    <span class="input-group-text">‚Çπ</span>
                                    <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
                                </div>
                                <div class="invalid-feedback">Please enter a valid price</div>
                            </div>

                            <div class="col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter a country</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" placeholder="Address, City, State" type="text" class="form-control" required>
                            <div class="invalid-feedback">Please enter a location</div>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select name="listing[category]" class="form-select" required>
                                <option value="" selected disabled>Select a category</option>
                                <option value="beach">üèñ Beach</option>
                                <option value="mountain">üèî Mountain</option>
                                <option value="city">üèô City</option>
                                <option value="lake">üåä Lake</option>
                                <option value="countryside">üå≥ Countryside</option>
                                <option value="mansion">üè∞ Mansion</option>
                            </select>
                            <div class="invalid-feedback">Please select a category</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Amenities</label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-bed"></i></span>
                                        <input type="number" name="listing[amenities][beds]" class="form-control" placeholder="Beds" min="1" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-bath"></i></span>
                                        <input type="number" name="listing[amenities][baths]" class="form-control" placeholder="Baths" min="1" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-users"></i></span>
                                        <input type="number" name="listing[amenities][guests]" class="form-control" placeholder="Guests" min="1" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
