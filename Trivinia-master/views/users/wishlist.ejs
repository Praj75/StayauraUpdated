<%- include('../includes/header') %>
<%- include('../includes/navbar') %>

<style>
    .page-heading {
        margin-top: 5rem;
        margin-bottom: 2rem;
        color: #484848;
        font-weight: 600;
    }

    .card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin-bottom: 1.5rem;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #484848;
    }

    .location-text {
        color: #717171;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }

    .price-text {
        font-size: 1.2rem;
        font-weight: 600;
        color: #484848;
        margin-bottom: 1.25rem;
    }

    .price-unit {
        font-size: 0.9rem;
        color: #717171;
        font-weight: normal;
    }

    .btn-group {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }

    .empty-state {
        margin-top: 5rem;
        text-align: center;
        padding: 3rem;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .empty-state i {
        font-size: 3rem;
        color: #FF385C;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        color: #484848;
        margin-bottom: 1rem;
    }

    .empty-state p {
        color: #717171;
        margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
        .page-heading {
            margin-top: 4rem;
            margin-bottom: 1.5rem;
            font-size: 1.75rem;
        }

        .btn-group {
            flex-direction: column;
        }
    }
</style>

<div class="container">
    <h1 class="page-heading">My Wishlist</h1>
    
    <% if (wishlist && wishlist.length > 0) { %>
        <div class="row">
            <% wishlist.forEach(listing => { %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card">
                        <% if (listing.images && listing.images.length > 0) { %>
                            <img src="<%= listing.images[0].url %>" class="card-img-top" alt="<%= listing.title %>">
                        <% } else { %>
                            <img src="/images/default-listing.jpg" class="card-img-top" alt="Default listing image">
                        <% } %>
                        
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="location-text">
                                <i class="fas fa-map-marker-alt"></i> <%= listing.location %>
                            </p>
                            <p class="price-text">
                                â‚¹<%= (listing.price/100).toLocaleString('en-IN', { maximumFractionDigits: 0 }) %>
                                <span class="price-unit">/ night</span>
                            </p>
                            <div class="btn-group">
                                <a href="/listings/<%= listing._id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <button class="btn btn-outline-danger remove-wishlist" data-listing-id="<%= listing._id %>">
                                    <i class="fas fa-heart-broken"></i> Remove
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <i class="fas fa-heart"></i>
            <h3>Your Wishlist is Empty</h3>
            <p>Start saving your favorite places!</p>
            <a href="/listings" class="btn btn-primary">
                <i class="fas fa-search"></i> Explore Listings
            </a>
        </div>
    <% } %>
</div>

<script>
document.querySelectorAll('.remove-wishlist').forEach(button => {
    button.addEventListener('click', async function() {
        const listingId = this.dataset.listingId;
        const card = this.closest('.col-12');
        
        try {
            const response = await fetch(`/user/wishlist/${listingId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                // Fade out animation
                card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                card.style.opacity = '0';
                card.style.transform = 'scale(0.95)';
                
                setTimeout(() => {
                    card.remove();
                    
                    // Check if wishlist is empty after removal
                    const remainingItems = document.querySelectorAll('.col-12').length;
                    if (remainingItems === 0) {
                        location.reload(); // Reload to show empty state
                    }
                }, 300);
            } else {
                const data = await response.json();
                alert(data.error || 'Failed to remove from wishlist');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to remove from wishlist');
        }
    });
});
</script>

<%- include('../includes/footer') %>

